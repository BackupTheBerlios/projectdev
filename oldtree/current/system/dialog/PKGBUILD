# $Id: PKGBUILD,v 1.2 2004/11/16 19:25:22 blokkie Exp $
# Arch Maintainer: dorphell <dorphell@archlinux.org>
# Maintainer: blokkie <t.fernagut@burningfrog.be>
pkgname=dialog
pkgver=1.0
pkgrel=1
pkgdesc="A tool to display dialog boxes from shell scripts"
depends=('ncurses')
url="http://hightek.org/dialog/"
source=(ftp://ftp.us.debian.org/debian/pool/main/d/dialog/${pkgname}_$pkgver-20040920.orig.tar.gz no-libm.patch)
md5sums=('c99a6eaabb2b9b4b646c294741d5352d' 'b5d342dcb3bcc9ff82d54a998f2f0252')

build() {
  cd $startdir/src/$pkgname-$pkgver-20040731
  patch -Np1 -i ../no-libm.patch || return 1
  ./configure --prefix=/usr --with-ncurses
  make || return 1
  make DESTDIR=$startdir/pkg install
}
