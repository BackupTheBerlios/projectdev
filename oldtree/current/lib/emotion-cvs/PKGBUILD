# Maintainer: Amar Hadzihasanovic <rensel[at]email.it>

pkgname=emotion-cvs
pkgver=20041109
pkgrel=1
pkgdesc="An evas smart object library that utilizes libxine for playing media"
groups=('efl')
url="http://www.enlightenment.org"
depends=('evas' 'ecore' 'edje' 'eet' 'xine-lib')
makedepends=('cvs')
provides=('emotion')
source=()

build() {
  cvs -z3 -d:pserver:anonymous@cvs.sourceforge.net:/cvsroot/enlightenment co -D "2004-11-09" e17/libs/emotion
  cd $startdir/src/e17/libs/emotion
  ./autogen.sh --prefix=/opt/efl
  make || return 1
  make DESTDIR=$startdir/pkg install
}
