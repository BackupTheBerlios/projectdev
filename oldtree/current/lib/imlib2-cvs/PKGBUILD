# Maintainer: Amar Hadzihasanovic <rensel[at]email.it>

pkgname=imlib2-cvs
pkgver=20041109
pkgrel=1
pkgdesc="General image handling library for X11 and Gtk"
groups=('efl')
url="http://www.enlightenment.org"
depends=('x-server' 'bzip2' 'libtiff' 'libungif')
makedepends=('cvs')
provides=('imlib2')
conflicts=('imlib2')
source=(efl.sh)
md5sums=('90f5eb6ebbcd74a299629f738be790aa')

build() {
  cvs -z3 -d:pserver:anonymous@cvs.sourceforge.net:/cvsroot/enlightenment co -D "2004-11-09" e17/libs/imlib2
  cd $startdir/src/e17/libs/imlib2
  ./autogen.sh --prefix=/opt/efl
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -D -m755 $startdir/src/efl.sh $startdir/pkg/etc/profile.d/efl.sh
}
