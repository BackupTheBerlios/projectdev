# Maintainer: Amar Hadzihasanovic <rensel[at]email.it>

pkgname=ewl-cvs
pkgver=20041109
pkgrel=1
pkgdesc="An Enlightened Widget Library"
groups=('efl')
url="http://www.enlightenment.org"
depends=('evas' 'edje'  'etox' 'ecore' 'emotion' 'eet')
makedepends=('cvs')
provides=('ewl')
source=()

build() {
  cvs -z3 -d:pserver:anonymous@cvs.sourceforge.net:/cvsroot/enlightenment co -D "2004-11-09" e17/libs/ewl
  cd $startdir/src/e17/libs/ewl
  ./autogen.sh CFLAGS="$CFLAGS -I/opt/efl/include" --prefix=/opt/efl
  make || return 1
  make DESTDIR=$startdir/pkg install
}
